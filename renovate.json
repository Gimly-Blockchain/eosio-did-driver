{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "labels": [
    "maintenance"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "jest",
        "sinon",
        "codecov",
        "lint",
        "jsdoc",
        "bundle",
        "prettier",
        "webpack",
        "typescript"
      ],
      "groupName": "builders-and-testers",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "packagePatterns": [
        "semantic",
        "commitlint"
      ],
      "groupName": "automation",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "groupName": "devDeps",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "commitMessagePrefix": "fix(deps): "
    }
  ]
}
